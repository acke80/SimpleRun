<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="12dp" />
            <gradient
                    android:startColor="@color/gray_alpha"
                    android:centerColor="@color/off_wihte"
                    android:centerY="0.75"
                    android:endColor="@color/gray_alpha"
                    android:angle="180"
                    />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                        android:radius="12dp" />
                <gradient
                        android:startColor="@color/green_500"
                        android:centerColor="@color/green_500"
                        android:endColor="@color/green_700"
                        android:angle="270"
                        />
            </shape>
        </clip>
    </item>

</layer-list>